<%- include ('partials/header.ejs'); %>
<style>
    button {
            all: unset;
        }

        .logo-happy-pet svg {
            width: 20vw;
            height: 8vh;
            fill: #fff;
        }

        .back-button{
            margin-top: -2vw;
        }

        .form input{
            border: 0;
        }

        .form-search{
        width: 24rem;
        }
</style>
<body>
  <div class="form bg-secondary p-5 text-white w-100 d-flex flex-column align-items-center justify-content-center">
    <div class="back-button d-flex justify-content-start w-100">
      <a href="/home" class="text-white pb-3 fs-4" id="botaoVoltar"><i class="fa-solid fa-arrow-left"></i></a>
  </div>
  <div class="logo-happy-pet">
    <%- include ('partials/logo.ejs') %>
</div>
    <h1>CADASTRAR RESPONSÁVEL</h1>
    <div class="form-responsavel">
      <form action="/responsavel" method="post">
          <label for="nome">Nome</label>
      </br>
          <input type="text" name="nome" id="nomeRes" class="rounded-1 <%= erro && erro.path[0]==="nome" ? 'border border-danger' : '' %> ">
      </br>
          <label for="funcao">Função</label>
      </br>
          <input type="text" name="funcao" id="funcaoRes" class="rounded-1 <%= erro && erro.path[0]==="funcao" ? 'border border-danger' : '' %> ">
      </br>
          <label for="telefone">Telefone</label>
      </br>
          <input type="text" name="telefone" id="telefoneRes" class="rounded-1 <%= erro && erro.path[0]==="telefone" ? 'border border-danger' : '' %> ">
      </br>
          <label for="email">Email</label>
      </br>
          <input type="email" name="email" id="emailRes" class="rounded-1 <%= erro && erro.path[0]==="email" ? 'border border-danger' : '' %> ">
      </br>
          <label for="senha">Senha</label>
      </br>
          <input type="password" name="senha" id="senhaRes" class="rounded-1 <%= erro && erro.path[0]==="senha" ? 'border border-danger' : '' %> ">
      </br>
          <label for="passwordConf">Confirmar senha</label>
      </br>
          <input type="password" name="senhaConf" id="senhaResConf" class="rounded-1 <%= erro && erro.path[0]==="senhaConf" ? 'border border-danger' : '' %> ">
      </br>
      <div class="button-send d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-outline-light w-100" id="enviarRes">Enviar</button>
    </div>
    </form>
  </div>
  </div>
    
    <div class="form-search search m-2 p-3 border">
      <form action="/responsavel/pesquisa" method="POST" class="gap-3 d-flex flex-row justify-content-between align-items-center">
        <div class="nome-search">
          <label for="nome">Nome</label>
          <input name="nome" class="rounded-1 border-1">
      </div>
      <div class="button-search">
        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
    </div>
      </form>
    </div>
    <div class="card-group pt-5 pb-3 d-flex justify-content-center gap-5 bg-white">
        <% if (responsaveis.length> 0) { %> <% for(let responsavel of responsaveis) { %>
            <div class="card-responsaveis col-sm-6 col-lg-4 col-xl-3 mb-3">
              <div class="card">
                <div class="card-header text-start d-flex flex-column">
                  <div class="actions-card d-flex justify-content-end">
                    <span class="d-flex gap-2">
                      <form action="/responsavel/edit" method="GET">
                        <input type="hidden" name="id" value="<%= responsavel.id %>" />
                        <button class="edit-responsavel text-dark fas fa-pen" type="submit"></button>
                      </form>
                      <form action="/responsavel/delete" method="GET">
                        <input type="hidden" name="id" value="<%= responsavel.id %>" />
                        <button class="text-dark fas fa-trash" type="submit"></button>
                      </form>
                    </span>
                  </div>
                  <div class="d-flex justify-content-between pt-2">
                    <span class="align-self-center fs-5 fw-semibold">
                      Nome: <%= responsavel.nome %>
                    </span>
                  </div>
                </div>
                <div class="card-body overflow-auto mh-100">
                  <p class="card-text">
                    Função: <%= responsavel.funcao %>
                  </p>
                  <p class="card-text">
                    Telefone: <%= responsavel.telefone %>
                  </p>
                </div>
                <div class="card-footer d-flex flex-column">
                  <span class="fw-semibold">Email: <%= responsavel.email %></span>
                </div>
              </div>
            </div>
            <% } %>
              <% } %>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>